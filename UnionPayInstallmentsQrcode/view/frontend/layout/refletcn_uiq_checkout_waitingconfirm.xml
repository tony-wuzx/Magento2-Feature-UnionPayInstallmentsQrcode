<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">We received your order!</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Zhixing\UnionPayInstallmentsQrcode\Block\WaitingConfirm"
                   name="checkout.waiting.confirm"
                   template="Zhixing_UnionPayInstallmentsQrcode::checkout/waiting_confirm.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
